      <div class="form-row full-width">
        <label class="form-label required">系统存在的风险</label>
        <div class="form-value">
          <a-textarea
            v-model:value="formState.systemRisk"
            :rows="3"
            :auto-size="{ minRows: 3, maxRows: 5 }"
          />
