          </a-button>
        </div>
      </div>

      <!-- 四个部门信息行 -->
      <div class="departments-row">
        <div class="dept-item">
          <label class="dept-label">业务主管部门</label>
          <a-input v-model:value="formState.businessDept" />
        </div>
        <div class="dept-item">
          <label class="dept-label">系统运营部门</label>
          <a-input v-model:value="formState.operationDept" />
        </div>
        <div class="dept-item">
          <label class="dept-label">系统建设部门</label>
          <a-input v-model:value="formState.constructionDept" />
        </div>
        <div class="dept-item">
          <label class="dept-label">系统运维部门</label>
          <a-input v-model:value="formState.maintenanceDept" />
        </div>
      </div>

      <!-- 两列表单区域 -->
