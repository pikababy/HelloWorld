<template>
  <div class="container">
    <h2>服务器列表弹框组件使用示例</h2>
    
    <!-- 触发按钮 -->
    <a-button type="primary" @click="showModal">
      打开服务器列表
    </a-button>
    
    <!-- 服务器列表弹框组件 -->
    <ServerListModal
      v-model:visible="modalVisible"
      title="qingtengyun服务器列表"
      :options="serverOptions"
      :defaultChecked="defaultSelected"
      @confirm="handleConfirm"
      @cancel="handleCancel"
    />
    
    <!-- 显示选中结果 -->
    <div v-if="selectedResult" class="result-display">
      <h3>选中的结果：</h3>
      <pre>{{ JSON.stringify(selectedResult, null, 2) }}</pre>
    </div>
  </div>
</template>

<script>
import { ref } from 'vue';
import { message } from 'ant-design-vue';
import ServerListModal from './ServerListModal.vue';

export default {
  name: 'ParentComponent',
  
  components: {
    ServerListModal
  },
  
  setup() {
    // 控制弹框显示
    const modalVisible = ref(false);
    
    // 存储选中的结果
    const selectedResult = ref(null);
    
    // 自定义选项列表
    const serverOptions = ref([
      { label: '办公', value: 'office' },
      { label: '生产', value: 'production' },
      { label: '测试', value: 'test' },
      { label: '开发', value: 'development' },
      { label: '备份', value: 'backup' },
      { label: '监控', value: 'monitor' } // 可以添加更多选项
    ]);
    
    // 默认选中项
    const defaultSelected = ref(['office', 'production']);
    
    // 显示弹框
    const showModal = () => {
      modalVisible.value = true;
    };
    
    // 处理确认事件
    const handleConfirm = (data) => {
      console.log('用户确认选择:', data);
      selectedResult.value = data;
      
      // 这里可以进行后续操作，如发送请求等
      // 例如：
      // await api.updateServerConfig(data.values);
      
      message.success('配置已保存');
    };
    
    // 处理取消事件
    const handleCancel = () => {
      console.log('用户取消操作');
      message.info('操作已取消');
    };
    
    return {
      modalVisible,
      selectedResult,
      serverOptions,
      defaultSelected,
      showModal,
      handleConfirm,
      handleCancel
    };
  }
};
</script>

<style scoped>
.container {
  padding: 40px;
  max-width: 1200px;
  margin: 0 auto;
}

h2 {
  margin-bottom: 24px;
  color: #333;
}

.result-display {
  margin-top: 24px;
  padding: 16px;
  background-color: #f5f5f5;
  border-radius: 4px;
  border: 1px solid #d9d9d9;
}

.result-display h3 {
  margin-bottom: 12px;
  color: #666;
}

pre {
  background-color: #fff;
  padding: 12px;
  border-radius: 4px;
  overflow-x: auto;
  font-family: 'Courier New', monospace;
  font-size: 14px;
  line-height: 1.5;
}
</style>