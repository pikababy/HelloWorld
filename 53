  <script>
    const { createApp, ref, reactive } = Vue;
    
    createApp({
      setup() {
        // è¡¨å•æ•°æ®
        const formData = reactive({
          handler: 'wangxiaojia/Wang Xiaojia (ç‹æ™“å˜‰)',
          isReturn: false
        });
        
        // é‡æ–°åˆ†é…å¼¹çª—
        const reassignModalVisible = ref(false);
        const reassignForm = reactive({
          handler: undefined
        });
        
        // å½“å‰æ¿€æ´»çš„é¡µç­¾
        const activeTab = ref('1');
        
        // é™„ä»¶è¡¨æ ¼åˆ—é…ç½®
        const attachmentColumns = [
          {
            title: 'æ–‡ä»¶å',
            dataIndex: 'fileName',
            key: 'fileName',
          },
          {
            title: 'å¤§å°',
            dataIndex: 'size',
            key: 'size',
            width: 100,
          },
          {
            title: 'æäº¤äºº',
            dataIndex: 'submitter',
            key: 'submitter',
            width: 150,
          },
          {
            title: 'æ“ä½œ',
            key: 'action',
            width: 80,
          }
        ];
        
        // é™„ä»¶æ•°æ®
        const attachmentData = ref([]);
        
        // æ“ä½œè®°å½•
        const operationRecords = ref([
          {
            id: 1,
            time: '2025-07-10 15:31:42',
            content: '- [å¹³å°ç®¡ç†å‘˜:Wang Xiaojia (ç‹æ™“å˜‰)/wangxiaojia]å®‰å…¨æ£€æµ‹æ¼æ´ï¼Œäº¤ç”±[å±ä¸»:wangxiaojia/Wang Xiaojia (ç‹æ™“å˜‰)]å¤„ç†ï¼Œä¿®å¤æ¼æ´'
          }
        ]);
        
        // æ˜¾ç¤ºé‡æ–°åˆ†é…å¼¹çª—
        const showReassignModal = () => {
          reassignModalVisible.value = true;
          reassignForm.handler = undefined;
        };
        
        // å¤„ç†é‡æ–°åˆ†é…
        const handleReassign = () => {
          if (!reassignForm.handler) {
            antd.message.warning('è¯·é€‰æ‹©å¤„ç†äºº');
            return;
          }
          
          // è¿™é‡Œè°ƒç”¨APIè¿›è¡Œé‡æ–°åˆ†é…
          antd.message.success('é‡æ–°åˆ†é…æˆåŠŸ');
          reassignModalVisible.value = false;
          
          // æ›´æ–°å¤„ç†äººä¿¡æ¯
          const handlerMap = {
            'zhangsan': 'å¼ ä¸‰',
            'lisi': 'æå››',
            'wangwu': 'ç‹äº”',
            'zhaoliu': 'èµµå…­'
          };
          formData.handler = handlerMap[reassignForm.handler] || reassignForm.handler;
        };
        
        // å®Œæˆå¤„ç†
        const handleComplete = () => {
          antd.Modal.confirm({
            title: 'ç¡®è®¤å®Œæˆ',
            content: 'ç¡®å®šè¦å®Œæˆæ­¤ä»»åŠ¡å—ï¼Ÿ',
            onOk() {
              antd.message.success('ä»»åŠ¡å·²å®Œæˆ');
            }
          });
        };
        
        // ä¸‹è½½é™„ä»¶
        const handleDownload = (record) => {
          antd.message.info(`ä¸‹è½½æ–‡ä»¶: ${record.fileName}`);
        };
        
        // è¿‡æ»¤é€‰é¡¹
        const filterOption = (input, option) => {
          return option.children[0].children.toLowerCase().indexOf(input.toLowerCase()) >= 0;
        };
        
        return {
          formData,
          reassignModalVisible,
          reassignForm,
          activeTab,
          attachmentColumns,
          attachmentData,
          operationRecords,
          showReassignModal,
          handleReassign,
          handleComplete,
          handleDownload,
          filterOption
        };
      }
    }).use(antd).mount('#app');
