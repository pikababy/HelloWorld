<body>
  <div id="app">
    <!-- 顶部导航 -->
    <div class="top-nav">
      <div class="nav-tabs">
        <div class="nav-tab">
          <span>📄</span>
          <span>银联国际办公IT系统</span>
        </div>
        <div class="nav-tab active">
          <span>📊</span>
          <span>【3】漏洞管理平台</span>
        </div>
        <div class="nav-tab">
          <span>📁</span>
          <span>Old漏洞管理平台</span>
        </div>
        <div class="nav-tab">
          <span>🔒</span>
          <span>登录 -new 漏洞管...</span>
        </div>
      </div>
    </div>

    <div class="page-container">
      <!-- 主要内容卡片 -->
      <div class="main-card">
        <a-card :bordered="false">
          <!-- 处理信息区块 -->
          <div class="section">
            <h3 class="section-title">处理信息</h3>
            
            <!-- 处理人信息 -->
            <div class="info-row">
              <span class="info-label">处理人【属主】</span>
              <div class="info-value">
                <a-input 
                  v-model:value="formData.handler" 
                  style="max-width: 400px"
                  readonly
                />
              </div>
            </div>
            
            <!-- 操作按钮 -->
            <div class="button-group">
              <a-button 
                type="danger"
                @click="showReassignModal"
              >
                重新分配
              </a-button>
              <a-button 
                type="primary"
                @click="handleComplete"
              >
                完成
              </a-button>
            </div>
            
            <!-- 退回选项 -->
            <a-checkbox v-model:checked="formData.isReturn">
              退回
            </a-checkbox>
          </div>
          
          <!-- 附件信息区块 -->
          <div class="attachment-section">
            <h3 class="section-title">附件信息</h3>
            
            <a-table 
              :columns="attachmentColumns" 
              :data-source="attachmentData"
              :pagination="false"
              size="small"
            >
              <template #bodyCell="{ column, record }">
                <template v-if="column.key === 'action'">
                  <a @click="handleDownload(record)">下载</a>
                </template>
              </template>
            </a-table>
          </div>
          
          <!-- 操作记录区块 -->
          <div class="operation-record">
            <h3 class="section-title">操作记录</h3>
            
            <div v-for="record in operationRecords" :key="record.id" class="record-item">
              <div class="record-time">{{ record.time }}</div>
              <div class="record-content">
                {{ record.content }}
              </div>
            </div>
          </div>
        </a-card>
      </div>
      
      <!-- 底部页签 -->
      <div class="tabs-container">
        <a-tabs v-model:activeKey="activeTab">
          <a-tab-pane key="1" tab="安全检测">
            <div style="padding: 20px; text-align: center; color: #999;">
              <p>修复期限</p>
              <p style="font-size: 24px; color: #333; margin-top: 10px;">2025-07-16 00:00:00</p>
            </div>
          </a-tab-pane>
          <a-tab-pane key="2" tab="处理记录">
            <a-empty description="暂无处理记录" />
          </a-tab-pane>
          <a-tab-pane key="3" tab="相关文档">
            <a-empty description="暂无相关文档" />
          </a-tab-pane>
        </a-tabs>
      </div>
    </div>
    
    <!-- 重新分配弹窗 -->
    <a-modal
      v-model:open="reassignModalVisible"
      title="重新分配"
      :width="500"
      @ok="handleReassign"
      @cancel="reassignModalVisible = false"
    >
      <a-form :label-col="{ span: 6 }" :wrapper-col="{ span: 16 }">
        <a-form-item label="清选择处理人" required>
          <a-select
            v-model:value="reassignForm.handler"
            placeholder="请选择"
            style="width: 100%"
            show-search
            :filter-option="filterOption"
          >
            <a-select-option value="zhangsan">张三</a-select-option>
            <a-select-option value="lisi">李四</a-select-option>
            <a-select-option value="wangwu">王五</a-select-option>
            <a-select-option value="zhaoliu">赵六</a-select-option>
          </a-select>
        </a-form-item>
      </a-form>
      
      <template #footer>
        <a-button @click="reassignModalVisible = false">取消</a-button>
        <a-button type="primary" @click="handleReassign">重新分配</a-button>
      </template>
    </a-modal>
  </div>

  <script>
    const { createApp, ref, reactive } = Vue;
    
    createApp({
      setup() {
        // 表单数据
        const formData = reactive({
          handler: 'wangxiaojia/Wang Xiaojia (王晓嘉)',
          isReturn: false
        });
        
        // 重新分配弹窗
        const reassignModalVisible = ref(false);
        const reassignForm = reactive({
          handler: undefined
        });
        
        // 当前激活的页签
        const activeTab = ref('1');
        
        // 附件表格列配置
        const attachmentColumns = [
          {
            title: '文件名',
            dataIndex: 'fileName',
            key: 'fileName',
          },
          {
            title: '大小',
            dataIndex: 'size',
            key: 'size',
            width: 100,
          },
          {
            title: '提交人',
            dataIndex: 'submitter',
            key: 'submitter',
            width: 150,
          },
          {
            title: '操作',
            key: 'action',
            width: 80,
          }
        ];
        
        // 附件数据
        const attachmentData = ref([]);
        
        // 操作记录
        const operationRecords = ref([
          {
            id: 1,
            time: '2025-07-10 15:31:42',
            content: '- [平台管理员:Wang Xiaojia (王晓嘉)/wangxiaojia]安全检测漏洞，交由[属主:wangxiaojia/Wang Xiaojia (王晓嘉)]处理，修复漏洞'
          }
        ]);
        
        // 显示重新分配弹窗
        const showReassignModal = () => {
          reassignModalVisible.value = true;
          reassignForm.handler = undefined;
        };
        
        // 处理重新分配
        const handleReassign = () => {
          if (!reassignForm.handler) {
            antd.message.warning('请选择处理人');
            return;
          }
          
          // 这里调用API进行重新分配
          antd.message.success('重新分配成功');
          reassignModalVisible.value = false;
          
          // 更新处理人信息
          const handlerMap = {
            'zhangsan': '张三',
            'lisi': '李四',
            'wangwu': '王五',
            'zhaoliu': '赵六'
          };
          formData.handler = handlerMap[reassignForm.handler] || reassignForm.handler;
        };
        
        // 完成处理
        const handleComplete = () => {
          antd.Modal.confirm({
            title: '确认完成',
            content: '确定要完成此任务吗？',
            onOk() {
              antd.message.success('任务已完成');
            }
          });
        };
        
        // 下载附件
        const handleDownload = (record) => {
          antd.message.info(`下载文件: ${record.fileName}`);
        };
        
        // 过滤选项
        const filterOption = (input, option) => {
          return option.children[0].children.toLowerCase().indexOf(input.toLowerCase()) >= 0;
        };
        
        return {
          formData,
          reassignModalVisible,
          reassignForm,
          activeTab,
          attachmentColumns,
          attachmentData,
          operationRecords,
          showReassignModal,
          handleReassign,
          handleComplete,
          handleDownload,
          filterOption
        };
      }
    }).use(antd).mount('#app');
  </script>
</body>
</html>